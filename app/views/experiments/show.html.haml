- @submenu = :experiments
.page-header
  %h1= raw t '.title', id: @experiment.id
  = raw t '.info', owner: @experiment.owner

.row
  .col-sm-12
    %h4= t ".acl"
    %table.table
      %thead
        %tr
          %th.col-sm-3= t ".circle"
          %th.col-sm-9= t ".permissions"
      - @experiment.acl.each do |acl|
        %tr
          %th= acl.circle_id
          %td= acl.permissions.join("<br/>").html_safe

    - unless @profile.blank?
      %h4= t ".profile"
      %table.table
        %thead
          %tr
            %th.col-sm-3= t ".field"
            %th.col-sm-9= t ".value"
        - @profile.each do |f|
          - k = f.name
          - v = f.value
          %tr
            %td= k.capitalize
            %td= v

    - unless @experiment.aspects.blank?
      %h4= t ".aspects"
      %table.table
        %thead
          %tr
            %th.col-sm-7= t ".name"
            %th.col-sm-3= t ".type"
            %th.col-sm-2.text-right= t ".value"
        - @experiment.aspects.each_with_index do |a, i|
          %tr
            %td= a.name
            %td #{a.type} / #{a.sub_type}
            %td.text-right
              = link_to t(".view"), "#", data: { id: i }, class: 'btn btn-xs btn-default more'
              = link_to t(".hide"), "#", data: { id: i }, class: 'btn btn-xs btn-default less hide'
              = link_to t(".modify"), "#", class: 'btn btn-xs btn-default'
          %tr{ data: { more_id: i }, class: 'hide' }
            %td{ colspan: 3 }
              %pre= a.formatted_data

