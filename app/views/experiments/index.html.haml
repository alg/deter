- @submenu = :experiments
.page-header
  %h1= raw t '.title'
  = raw t '.info'

.row
  .col-sm-12
    %table.table.table-striped
      %thead
        %tr
          %th= t '.name'
          %th.col-sm-2= t '.owner'
          %th.col-sm-2.text-right= t '.actions'
      %tbody
        - if @experiments.blank?
          %tr
            %td{ colspan: 2 }= t '.nothing'
        - else
          - @experiments.each do |e|
            %tr
              %td= link_to e.id, experiment_path(e.id)
              %td= e.owner
              %td.text-right
                = link_to t(".more"), "#", data: { id: e.id }, class: 'more'
                = link_to t(".less"), "#", data: { id: e.id }, class: 'less hide'
            %tr{ data: { more_id: e.id }, class: 'hide' }
              %td{ colspan: 3 }
                .data-cell
                %p
                  = link_to t(".view"), experiment_path(e.id), class: 'btn btn-xs btn-info'
                  = link_to t(".delete"), experiment_path(e.id), method: :delete, data: { confirm: t(".confirm_delete") }, class: 'btn btn-xs btn-danger'

.row
  .col-sm-12
    = link_to t(".new_experiment"), :new_experiment, class: "btn btn-default"
