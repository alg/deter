.navbar.navbar-inverse.navbar-fixed-top{ role: 'navigation' }
  .container
    .navbar-header
      %button.navbar-toggle.collapsed{ type: 'button', data: { toggle: 'collapse', target: '.navbar-collapse' } }
        %span.sr-only Toggle navigation
        %span.icon-bar
        %span.icon-bar
        %span.icon-bar
      = link_to :root, class: 'navbar-brand' do
        = image_tag "logo.png"

    .navbar-collapse.collapse
      %ul.nav.navbar-nav.navbar-right
        - if logged_in?
          %li= link_to "Log out", :logout
        - else
          %li= link_to "Log in", :login
        %li= link_to "DETER Project", "http://deter-project.org/"
        %li= link_to "Contact", "http://info.deterlab.net/contact_deterlab"

- if logged_in?
  .submenu
    .container
      .navbar.navbar-inverse{ role: 'navigation' }
        %ul.nav.navbar-nav
          = submenu_item :profile, "Profile", profile_path
          = dropdown_submenu_item [ :my_projects, :manage_project ], t("submenu.projects") do
            = submenu_item :my_projects, t("submenu.my_projects"), projects_path
            %li.dropdown-submenu{ class: @submenu == :manage_project ? 'active' : nil }
              = link_to t("submenu.manage_projects"), "#", tabindex: -1
              %ul.dropdown-menu
                - projects = deter_lab.get_managed_projects
                - if projects.blank?
                  %li= link_to t(".no_managed_projects"), "#"
                - else
                  - projects.each do |p|
                    %li{ class: p.project_id == params[:id] ? 'active' : nil }
                      = link_to "Manage #{p.project_id}", manage_project_path(p.project_id)

          <li><a href="#">Libraries</a></li>
          = dropdown_submenu_item [ :experiments ], t("submenu.experiments") do
            = submenu_item :experiments, t("submenu.my_experiments"), experiments_path
          <li><a href="#">Notifications</a></li>
