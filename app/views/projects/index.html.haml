- @submenu = :projects
.page-header
  %h1= raw t '.title'

= raw t '.info'

.row
  .col-sm-12
    %table.table.table-striped
      %thead
        %tr
          %th= t '.project_id'
          %th= t '.owner'
          %th= t '.members'
          %th= t '.approved'
          %th= t '.actions'
      %tbody
        - if @projects.blank?
          %tr
            %td{ colspan: 3 }= t '.nothing'
        - else
          - @projects.each do |p|
            %tr
              %td= p.project_id
              %td= p.owner
              %td= members_list p.members
              %td= p.approved ? 'Yes' : 'No'
              %td= link_to t(".delete"), project_path(p.project_id), method: :delete, data: { confirm: "Are you sure to delete this project?" }

.row
  .col-sm-12
    = link_to t(".new_project"), :new_project, class: "btn btn-default"
