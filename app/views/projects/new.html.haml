- @submenu = :new_project
.page-header
  %h1= raw t '.title'
  = raw t '.info'

.row
  = form_tag projects_path, { class: 'form-horizontal' } do
    - base = "page_project_info.project_leader"
    - pp   = params[:project] || {}
    = form_text_field base, "project[name]",            value: pp[:name]
    = form_text_area  base, "project[description]",     value: pp[:description]
    = form_text_field base, "project[website]",         value: pp[:website]
    = form_select     base, "project[org_type]",        value: pp[:org_type]
    = form_select     base, "project[research_focus]",  value: pp[:research_focus]
    = form_select     base, "project[funding]",         value: pp[:funding]
    = form_select     base, "project[listing]",         value: pp[:listing], field_options: { include_blank: false }

    .form-group
      .col-sm-offset-3.col-sm-4
        = submit_tag t(".submit"), class: "btn btn-default"
