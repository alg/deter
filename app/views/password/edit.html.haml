- @submenu = :profile
.page-header
  %h1= raw t '.title'
  = raw t '.info'

.row
  .col-sm-12
    = form_tag(change_password_path, { class: 'form-horizontal' }) do
      - error = (@errors || {})[:password]
      .form-group{ class: error.present? ? "has-errors" : nil }
        = label_tag "user[password]", t(".password"), class: "col-sm-3 control-label"
        .col-sm-5
          = password_field_tag "user[password]", "", class: "form-control"
          - if error.present?
            %span.help-block= error

      .form-group
        = label_tag "user[password_confirmation]", t(".password_confirmation"), class: "col-sm-3 control-label"
        .col-sm-5
          = password_field_tag "user[password_confirmation]", "", class: "form-control"

      .form-group
        .col-sm-offset-3.col-sm-6
          = submit_tag t(".submit"), class: "btn btn-default"
          = link_to t(".cancel"), :my_profile, class: "btn btn-default"
