#page-user-type.page
  .page-header
    %h1= t "page_user_type.title"

  = raw t "page_user_type.info"

  .radio
    %label
      = radio_button_tag "user_type", "project_leader", false, data: { bind: "checked: userType" }
      = raw t "page_user_type.options.project_leader"

  .radio
    %label
      = radio_button_tag "user_type", "member", false, data: { bind: "checked: userType" }
      = raw t "page_user_type.options.member"

  .radio
    %label
      = radio_button_tag "user_type", "research_advisor", false, data: { bind: "checked: userType" }
      = raw t "page_user_type.options.research_advisor"

  .radio
    %label
      = radio_button_tag "user_type", "student", false, data: { bind: "checked: userType" }
      = raw t "page_user_type.options.student"

  .radio
    %label
      = radio_button_tag "user_type", "faculty", false, data: { bind: "checked: userType" }
      = raw t "page_user_type.options.faculty"

  .panel.panel-default
    .panel-body
      .row
        .col-xs-6= link_to t("page_user_type.back_button"), "#", class: "btn btn-primary", data: { bind: "click: showInfoPage" }
        .col-xs-6
          %span.next-btn.pull-right
            = link_to t("page_user_type.next_button"), "#", class: "btn btn-primary", data: { bind: "click: showUserDetailsPage, css: { disabled: userTypePageInvalid }" }
