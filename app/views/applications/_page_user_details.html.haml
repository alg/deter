#page-user-details.page
  .page-header
    %h1= t "page_user_details.title"

  <!-- ko if: userType() == "project_leader" -->
  = render 'user_details_project_leader'
  <!-- /ko -->


  .panel.panel-default
    .panel-body
      .row
        .col-xs-6= link_to t("page_user_details.back_button"), "#", class: "btn btn-primary", data: { bind: "click: showUserTypePage" }
        .col-xs-6
          %span.next-btn.pull-right
            = link_to t("page_user_details.next_button"), "#", class: "btn btn-primary", data: { bind: "click: showProjectInfoPage, css: { disabled: userDetailsPageInvalid}" }
