#page-new-user.page
  .page-header
    %h1= t "page_new_user.title"

  <!-- ko if: userType() == "project_leader" -->
  = render 'new_user_project_leader'
  <!-- /ko -->


  .panel.panel-default
    .panel-body
      .row
        .col-xs-6= link_to t("page_new_user.back_button"), "#", class: "btn btn-primary", data: { bind: "click: showUserTypePage" }
        .col-xs-6
          %span.next-btn.pull-right
            = link_to t("page_new_user.next_button"), "#", class: "btn btn-primary", data: { bind: "click: showProjectInfoPage, css: { disabled: newUserPageInvalid}" }
